extends layout 

block content 

    h1 #{title}: 

    dl 
        dt #[strong #{item.name}:]
        dd= item.description
        dt #[strong Category:]
        each category in item.category 
            dd 
                a(href=category.url)=category.name 
        else 
           dd -
        dt #[strong Price:] 
        dd $ #{item.price} 
        dt #[strong Stock:]
        dd Currently in stock: #{item.numberInStock} 

    hr
    p 
        a(href=item.url + '/delete') Delete product 
    p 
        a(href=item.url + '/update') Update product 
        
        