extends layout 

block content 

    h1 #{title}: 


    form(method="POST") 
        div.form-flex
            div 
                label(for="name") Name: 
                input#name(type="text" name="name" placeholder="Croissant..." value=(item === undefined ? '' : item.name) required)
            div 
                label(for="description") Description: 
                input#description(type="text" name="description" placeholder="Buttery croissant..." value=(item === undefined ? '' : item.description) required)
            div     
                label(for="price") Price: 
                input#price(type="number" min="0" step='0.01' name="price" placeholder="Enter the price" value=(item === undefined ? '' : item.price) required)  
            div     
                label(for="stock") Stock: 
                input#stock(type="number" min="0" step='1' name="stock" placeholder="Number of items in stock" value=(item === undefined ? '' : item.numberInStock) required)
            div 
                label(for="categories") Category:
                div 
                    each category in categories 
                        if category.checked
                            label(for=category._id) #{category.name}:
                            input(id=category._id type="checkbox" name="category" value=category._id checked) 
                        else 
                            label(for=category._id) #{category.name}:
                            input(id=category._id type="checkbox" name="category" value=category._id) 
        button(type="Submit") Submit
    if errors 
        ul 
            each error in errors 
                li= error.msg
        